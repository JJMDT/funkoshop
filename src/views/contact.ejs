<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto | Funkoshop</title>
    <link rel="stylesheet" href="/public/css/index.css">


</head>

<body class="grid-fixed">
    <header class="page-header"> <!-- Inicio Header -->
        <nav class="navbar container">
            <picture class="nabvar__logo">
                <a href="/home">
                    <img src="../../../public/img/branding/logo_light_horizontal.svg" alt="Isologotipo de la Marca Funkoshop">
                </a>
            </picture>
            <ul class="navbar__menu">
                <li class="navbar__item with-submenu">
                    <a class="navbar__link with-icon" href="/shop">SHOP <iconify-icon
                            icon="carbon:chevron-down"></iconify-icon></a>
                    <ul class="submenu">
                        <% categorias.forEach(cat => {  %>
                            <li class="submenu__item">
                                <a href="#" class="submenu__link"> <%= cat.category_name %></a>
                            </li>
                            <% }) %>
                    </ul>
                </li>
                <li class="navbar__item"><a class="navbar__link" href="/auth/login">LOGIN</a></li>
                <li class="navbar__item" id="carrito">
                    <span id="cantidadCarrito"><%= sumaQuantity %></span>
                    <a href="/shop/cart" class="navbar__carrito"><img
                            src="../../../public/img/icons/cart-icon.svg" alt="Icono de carrito"></a>
                </li>
            </ul>
        </nav>
    </header> <!--   Fin Header -->
    <main id="register" class="container">
        <div class="register__header">
            <h2 class="register__title">CONTACTO</h2>
            <p class="register__subtitle">Completa el formulario de contacto</p>
        </div>
        <form class="register__form" action="" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form__box--grid">
                <label class="form__label" for="name">Nombre:</label>
                <input class="form__input" type="text" name="name" id="name" placeholder="nombre" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="lastname">Apellido:</label>
                <input class="form__input" type="text" name="lastname" id="lastname" placeholder="apellido" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="email">Email:</label>
                <input class="form__input" type="email" name="email" id="email" placeholder="johndoe@email.com" required>
            </div>
            <div class="form__box--grid">
              <label class="form__label" for="consulta">Mensaje:</label>
              <textarea class="form__input" name="consulta" id="consulta" placeholder="Escribe tu consulta..." required></textarea>
          </div>
           
            <div class="form__submission">
                <input class="form__btn btn btn--primary btn--large" type="submit" >
               
            </div>
        </form>
    </main>
    <footer class="footer">
        <nav class="navbar container">
            <ul class="navbar__item">
                <li class="navbar__item">
                    <a class="navbar__link" href="/shop">SHOP</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/auth/register">REGISTRARSE</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/auth/login">LOGIN</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/contact">CONTACTO</a>
                </li>
            </ul>
            <picture>
                <img src="../../../public/img/branding/isotype.svg" alt="Isotipo de la marca Funkoshop">
            </picture>
        </nav>
        <p class="footer__parrafo">All rights reserved 2023 - Funkoshop &copy;</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>

</body>
</html>